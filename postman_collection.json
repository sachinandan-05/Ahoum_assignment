							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"facilitator@example.com\",\n    \"password\": \"Test@123\",\n    \"role\": \"FACILITATOR\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/signup/",
							"host": ["{{base_url}}"],
							"path": ["auth", "signup", ""]
						}
					}
				},
				{
					"name": "1.3 Verify Email OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"seeker@example.com\",\n    \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/verify-email/",
							"host": ["{{base_url}}"],
							"path": ["auth", "verify-email", ""]
						}
					}
				},
				{
					"name": "1.4 Resend OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"seeker@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/resend-otp/",
							"host": ["{{base_url}}"],
							"path": ["auth", "resend-otp", ""]
						}
					}
				},
				{
					"name": "1.5 Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.access) {",
									"    pm.collectionVariables.set('access_token', jsonData.access);",
									"}",
									"if (jsonData.refresh) {",
									"    pm.collectionVariables.set('refresh_token', jsonData.refresh);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"facilitator@example.com\",\n    \"password\": \"Test@123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login/",
							"host": ["{{base_url}}"],
							"path": ["auth", "login", ""]
						}
					}
				},
				{
					"name": "1.6 Refresh Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/refresh/",
							"host": ["{{base_url}}"],
							"path": ["auth", "refresh", ""]
						}
					}
				},
				{
					"name": "1.7 Password Reset Request",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"seeker@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/",
							"host": ["{{base_url}}"],
							"path": ["auth", "password-reset", ""]
						}
					}
				},
				{
					"name": "1.8 Password Reset Confirm",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"seeker@example.com\",\n    \"otp\": \"123456\",\n    \"new_password\": \"NewPass@123\",\n    \"confirm_password\": \"NewPass@123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/password-reset/confirm/",
							"host": ["{{base_url}}"],
							"path": ["auth", "password-reset", "confirm", ""]
						}
					}
				}
			]
		},
		{
